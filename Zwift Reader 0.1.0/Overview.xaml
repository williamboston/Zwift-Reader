                       Text="xxxx"
                       Grid.Column="1"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="max_power"
                       Text="Highest Power:"
                       Grid.Column="0"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="122"
                       />
                            <TextBlock x:Name="max_power_val"
                       Text="XXXX watts"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="max_cadence"
                       Text="Highest Cadence:"
                       Grid.Column="0"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="142"
                       />
                            <TextBlock x:Name="max_cadence_val"
                       Text="xxxx RPM"
                       Grid.Column="1"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="max_speed"
                       Text="Top Speed:"
                       Grid.Column="0"
                       Grid.Row="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="23" Margin="0,23" Width="92"
                       />
                            <TextBlock x:Name="max_speed_val"
                       Text="XXXX"
                       Grid.Column="1"
                       Grid.Row="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="alt_gained"
                       Text="Altitude Gained:"
                       Grid.Column="2"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="130"
                       />
                            <TextBlock x:Name="alt_gained_val"
                       Text="XXXXm"
                       Grid.Column="3"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="calories_burned"
                       Text="Calories Burned:"
                       Grid.Column="2"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="215"
                       />
                            <TextBlock x:Name="calories_burned_val"
                       Text="XXXX kCal"
                       Grid.Column="3"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="max_incline"
                       Text="Steepest Incline:"
                       Grid.Column="2"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="130"
                       />
                            <TextBlock x:Name="max_incline_val"
                       Text="XXXX"
                       Grid.Column="3"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />

                            <TextBlock x:Name="max_decline"
                       Text="Steepest Decline:"
                       Grid.Column="2"
                       Grid.Row="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="23" Margin="0,23" Width="138"
                       />
                            <TextBlock x:Name="max_decline_val"
                       Text="XXXXm"
                       Grid.Column="3"
                       Grid.Row="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                        </Grid>
                    </Grid>
                </Border>


                <Border Background="White" BorderThickness="5 5 0 0" BorderBrush="White" Grid.Column="1" Grid.Row="1">
                    <Grid Background="#FFFF6800">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2.5*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="cp_title"
                       Text="C R I T I C A L   P O W E R"
                       Grid.Column="0"
                       Grid.Row="0"
                       FontSize="26"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />

                        <Grid Grid.Row="1" Margin="10 0 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="168*"/>
                                <ColumnDefinition Width="106*"/>
                                <ColumnDefinition Width="147*"/>
                                <ColumnDefinition Width="137*"/>
                                <ColumnDefinition Width="190*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="82*"/>
                                <RowDefinition Height="88*"/>
                                <RowDefinition Height="83*"/>
                                <RowDefinition Height="41"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="one_second"
                       Text="1 Second:"
                       Grid.Column="1"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,30" Width="85"
