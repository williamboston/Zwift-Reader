                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <Border Background="White" BorderThickness="0 20 5 5" BorderBrush="White" Grid.Column="0" Grid.Row="0">
                    <Grid Grid.Column="0"
                  Grid.Row="0" Background="#FFFF6800">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2.5*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="averages"
                       Text="A V E R A G E S"
                       FontSize="26"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
                        <Grid Grid.Column="0"
                      Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="199*"/>
                                <ColumnDefinition Width="180*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="55*"/>
                                <RowDefinition Height="63*"/>
                                <RowDefinition Height="56*"/>
                                <RowDefinition Height="105*"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="avg_power"
                       Text="   Power:"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                                       Margin="236,20,34,13" Height="22" Width="128"
                       />
                            <TextBlock x:Name="avg_power_val"
                       Text="XXXX watts"
                       Grid.Column="1"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="avg_cadence"
                       Text="     Cadence:"
                       Grid.Column="0"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Height="22" Margin="226,25,24,16" Width="148"
                       />
