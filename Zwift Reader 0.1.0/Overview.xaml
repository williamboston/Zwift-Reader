                            <TextBlock x:Name="five_min_cp"
                       Text="xxxx"
                       Grid.Column="4"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,30" Width="92"
                       />

                            <TextBlock x:Name="twenty_min_val"
                       Text="20 Minute:"
                       Grid.Column="3"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,32,0,34" Width="92"
                       />
