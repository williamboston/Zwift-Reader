      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zwift_Reader_0._1._0"
      mc:Ignorable="d" 
      d:DesignHeight="1050" d:DesignWidth="1536"
      Title="Overview"
      FontFamily="Microsoft YaHei UI Light"
      TextBlock.Foreground="White"
      FontSize="18">


    <Border Background="White" BorderThickness="5 5 5 5" BorderBrush="White">
        <Grid Background="#FFFF6800">
            <Grid Margin="0,6,0,807">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text=" R I D E  O V E R V I E W"
                       Grid.Column="1"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="38"
                       FontFamily="Microsoft YaHei UI"    
                       />

                <TextBlock x:Name="ride_type"
                       Text="ride_type"
                       FontSize="26"
                       Grid.Column="0"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
                <TextBlock x:Name="start_time"
                       Text="start_time"
                       FontSize="26"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
                <TextBlock x:Name="ride_date"
                       Text="ride_date"
                       FontSize="26"
                       Grid.Column="2"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
            </Grid>

            <Grid Margin="0,208,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
