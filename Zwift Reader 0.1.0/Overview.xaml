                       Text="XXXX rpm"
                       Grid.Column="1"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                            <TextBlock x:Name="avg_speed"
                       Text="   Speed:"
                       Grid.Column="0"
                       Grid.Row="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Height="22" Margin="236,17,34,17" Width="128"
                       />
