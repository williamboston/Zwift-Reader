                       Text="xxxx"
                       Grid.Column="4"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,32,0,34" Width="92"
                       />

                            <TextBlock x:Name="sixty_min_val"
                       Text="60 Minute:"
                       Grid.Column="3"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,27,0,34" Width="92"
                       />
