                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,32,0,34" Width="122" Grid.ColumnSpan="2"
                       />
                            <TextBlock x:Name="ten_second_cp"
                       Text="xxxx"
                       Grid.Column="2"
                       Grid.Row="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,32,0,34" Width="91"
                       />
                            <TextBlock x:Name="sixty_second_val"
                       Text="1 Minute:"
                       Grid.Column="1"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,27,0,34" Width="142" Grid.ColumnSpan="2"
                       />
                            <TextBlock x:Name="sixty_second_cp"
                       Text="xxxx"
