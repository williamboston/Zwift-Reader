                       Text="XXXX kph"
                       Grid.Column="1"
                       Grid.Row="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
                        </Grid>
                    </Grid>
                </Border>

                <Border Background="White" BorderThickness="0 5 5 0" BorderBrush="White" Grid.Column="0" Grid.Row="1">
                    <Grid Grid.Column="0"
                  Grid.Row="1"
                          Background="#FFFF6800">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2.5*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ftp_title"
                       Text="F T P"
                       FontSize="26"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />

                        <TextBlock x:Name="ftp"
                       Text="ftp"
                       FontSize="100"
                       Grid.Column="0"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                                   Margin="0 0 0 110"
                       />
                    </Grid>
                </Border>


                <Border Background="White" BorderThickness="5 20 0 5" BorderBrush="White" Grid.Column="1" Grid.Row="0">
                    <Grid Background="#FFFF6800" RenderTransformOrigin="0.506,0.269">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2.5*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ride_data"
                       Text="C O R E   M E T R I C S"
                       FontSize="26"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       />
                        <Grid Grid.Column="0"
                      Grid.Row="1"
                              Margin="40 -30 0 30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" MinWidth="183"/>
                                <ColumnDefinition Width="204*"/>
                                <ColumnDefinition Width="auto" MinWidth="224"/>
                                <ColumnDefinition Width="137*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>


                            <TextBlock x:Name="ride_time"
                       Text="Ride Time:"
                       Grid.Column="0"
                       Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" Height="22" Margin="0,24" Width="85"
                       />
